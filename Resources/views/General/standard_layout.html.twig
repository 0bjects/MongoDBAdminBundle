{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('bundles/objectsmongodbadmin/css/chosen.min.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('bundles/objectsmongodbadmin/css/jquery-ui-timepicker-addon.css') }}" type="text/css" rel="stylesheet" />
<style>
    .ui-datepicker{
        z-index: 9999 !important;
    }
    textarea {
        min-height: 50px !important;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('bundles/objectsmongodbadmin/js/jquery-ui-sliderAccess.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/objectsmongodbadmin/js/jquery-ui-timepicker-addon.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/objectsmongodbadmin/js/chosen.jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/objectsmongodbadmin/js/jquery.livequery.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/objectsmongodbadmin/js/jquery.autosize-min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/objectsmongodbadmin/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/objectsmongodbadmin/js/backend.js') }}" type="text/javascript"></script>
{% endblock %}

{% block logo %}
<a class="brand" href="{{ path('sonata_admin_dashboard') }}">Home</a>
<div class="nav-collapse collapse">
    <ul class="nav">
        <li><a href="{{ path('sonata_admin_dashboard') }}">{% trans %}Dashboard{% endtrans %}</a></li>
        <li><a href="{{ path('admin_site_blocks') }}">{% trans %}Static Blocks{% endtrans %}</a></li>
        <li><a href="{{ path('admin_site_pages') }}">{% trans %}Static Pages{% endtrans %}</a></li>
        <li><a href="{{ path('admin_site_emails') }}">{% trans %}Site Emails{% endtrans %}</a></li>
        <li><a href="{{ path('admin_site_configurations') }}">{% trans %}Site Configurations{% endtrans %}</a></li>
        <li><a href="{{ path('logout') }}">{% trans %}Logout{% endtrans %}</a></li>
    </ul>
</div>
{% endblock %}

{% block footer %}
<div class="pull-right clearfix" style="margin-bottom: 10px;">
    <span class="label">
        {% trans %}Developed by{% endtrans %} <a style="color: black" target="_blank" rel="noreferrer" href="http://www.objects.ws">Objects</a>
    </span>
</div>
{% endblock %}
